<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
            >
        <TextView
                android:text="@string/remote_shutdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shutdown_txt_tv"
                android:textSize="30sp"
                android:layout_margin="40dp"
                />
        <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/select_ip_sp">

        </Spinner>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="30sp"
                  android:hint="@string/input_ip"
                  android:id="@+id/host_input_et"
                  android:layout_margin="5dp"
                  android:layout_centerInParent="true"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/shutdown_btn"
                android:text="@string/shutdown"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="@drawable/bg_btn"/>
    </LinearLayout>



</RelativeLayout>
